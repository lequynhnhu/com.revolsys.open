<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.revolsys.open</groupId>
  <artifactId>com.revolsys.open.parent</artifactId>
  <packaging>pom</packaging>
  <name>Revolution Systems Open Library</name>
  <version>2011.11.16-2.RELEASE</version>
  <description>The parent module of the Revolution Systems Open Library.</description>
  <url>http://open.revolsys.com/</url>
  
  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>7</version>
  </parent>

  <licenses>
    <license>
      <name>Apache 2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
    </license>
  </licenses>

  <scm>
    <connection>scm:git:git@github.com:revolsys/com.revolsys.open.git</connection>
    <developerConnection>scm:git:git@github.com:revolsys/com.revolsys.open.git</developerConnection>
    <url>https://github.com/revolsys/com.revolsys.open</url>
  </scm>

  <developers>
    <developer>
      <id>paustin</id>
      <name>Paul Austin</name>
      <email>paul.austin@revolsys.com</email>
    </developer>
  </developers>
  
  <organization>
    <name>Revolution Systems Inc.</name>
    <url>http://www.revolsys.com/</url>
  </organization>
 
  <modules>
    <module>com.revolsys.open.core</module>
    <module>com.revolsys.open.orm.core</module>
    <module>com.revolsys.open.orm.hibernate</module>
    <module>com.revolsys.open.orm.jpa</module>
    <module>com.revolsys.open.web</module>
    <module>com.revolsys.open.gis.ecsv</module>
    <module>com.revolsys.open.gis.oracle</module>
    <module>com.revolsys.open.gis.postgis</module>
    <module>com.revolsys.open.gis.esri.gdb.file</module>
    <module>com.revolsys.open.gis.google.fusiontables</module>
<!--     <module>com.revolsys.open.gis.server</module> -->
  </modules>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <version>2.3.1</version>
        <configuration>
          <createChecksum>true</createChecksum>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
        <configuration>
          <includePom>true</includePom>
        </configuration>
        <executions>
          <execution>
            <id>attach-sources</id>
            <phase>verify</phase>
            <goals>
              <goal>jar-no-fork</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <org.slf4j.version>1.6.1</org.slf4j.version>
    <org.springframework.version>3.0.5.RELEASE</org.springframework.version>
    <org.springframework.security.version>3.0.5.RELEASE</org.springframework.security.version>
    <osgi.bundle.vendor>${project.organization.name}</osgi.bundle.vendor>
  </properties>
</project>
